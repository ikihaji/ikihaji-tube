{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@ikihaji-tube/tsconfig/tsconfig.bun.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "rootDir": "./",
    "paths": {
      "#api/*": ["./src/*"],
      "~api/*": ["./*"]
    }
  },
  "include": ["./src/**/*", "./*.*js", "./*.*ts"],
  "exclude": ["**/node_modules/**/*"]
}
